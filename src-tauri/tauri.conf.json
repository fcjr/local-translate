{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Local Translate",
  "version": "0.1.13",
  "identifier": "com.leftshift.local-translate.app",
  "build": {
    "beforeDevCommand": "uv sync && pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "features": [
      "pytauri/standalone"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "Local Translate",
        "width": 1100,
        "height": 700,
        "minWidth": 800,
        "minHeight": 500,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/fcjr/local-translate/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJBRjkxODczMTEyNTlFNTUKUldSVm5pVVJjeGo1dWdRcXNQcUwwb0NZeWc2Qjc5Qkw5a3B5anVFN2FjUTNabjIvaUhMQmZPcTcK"
    }
  },
  "bundle": {
    "active": false,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
